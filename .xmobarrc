Config { font = "xft:Terminus-11"
       , position = TopW L 85
       , bgColor = "#002b36"
       , fgColor = "#657b83"
       , lowerOnStart = True
       , commands = [ Run Battery [] 30
                    , Run StdinReader
                    , Run Date "%a %b %d %k:%M" "date" 100
                    ]
       , sepChar = "'"
       , alignSep = "}{"
       , template = "'StdinReader' }{ 'date'"
       }
