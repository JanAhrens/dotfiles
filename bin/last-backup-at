#!/usr/bin/env ruby

time = Time.at(File.read(File.expand_path('~/.last-backup')).chomp.to_i)
now = Time.now
if time.day == now.day && time.month == now.month && time.year == now.year
  minute_diff = (now.to_i - time.to_i) / 60.0
  if minute_diff < 1
    puts "The last backup was less than a minute ago"
  else
    puts "The last backup was #{minute_diff.to_i} minute(s) ago at #{time.strftime('%H:%M')}"
  end
else
  day_diff = now.day - time.day
  puts "The last backup was #{day_diff} day(s) ago #{time}"
end
