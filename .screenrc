caption string "%?%F%{= Bk}%? %C%A %D %d-%m-%Y %{= kB} %t%= %?%F%{= Bk}%:%{= wk}%? %n "

hardstatus alwayslastline '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %d/%m %{W}%c %{g}]'

# increase scrollback, default 10
defscrollback 1000

# don't display the copyright notice during startup
startup_message off

# detach on hangup
autodetach on

# Mutt demands this
# http://wiki.mutt.org/?MuttFaq/Appearance
defbce on
term screen-bce
